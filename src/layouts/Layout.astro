---
export interface Props {
	title: string;
	socialPreview?: string;
	socialDescription?: string;
}

const { title, socialPreview, socialDescription } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.ico" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link rel="apple-touch-icon" sizes="180x180" href="/favicons/apple-touch-icon.png">
		<link rel="icon" type="image/png" sizes="32x32" href="/favicons/favicon-32x32.png">
		<link rel="icon" type="image/png" sizes="16x16" href="/favicons/favicon-16x16.png">
		<link rel="manifest" href="/favicons/site.webmanifest">
		<link rel="mask-icon" href="/favicons/safari-pinned-tab.svg" color="#0b0b0b">
		<meta name="msapplication-TileColor" content="#da532c">
		<meta name="theme-color" content="#ffffff">
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:ital,wght@0,100;0,300;0,400;0,700;1,100;1,300;1,400;1,700&display=swap" rel="stylesheet">
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/katex@0.15.2/dist/katex.min.css"
            integrity="sha384-MlJdn/WNKDGXveldHDdyRP1R4CTHr3FeuDNfhsLPYrq2t0UBkUdK2jyTnXPEK1NQ" crossorigin="anonymous">

		<meta property="og:title" content={title} />
		<meta property="og:type" content="website" />
		<meta property="og:url" content={Astro.url} />
		<meta property="og:image" content={socialPreview || "/banner.png"} />
		<meta property="og:description" content={socialDescription || "Hi! I'm Squiggles, a full-time student and aspiring game dev."} />
		
    </head>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	@font-face {
		font-family: 'Cera';
		src: url('/fonts/Cera Pro Medium.otf') format('opentype');
		font-weight: 500;
		font-style: normal;
	}

	@font-face {
		font-family: 'Cera';
		src: url('/fonts/Cera Pro Bold.otf') format('opentype');
		font-weight: 700;
		font-style: bold;
	}

	@font-face {
		font-family: 'Cera';
		src: url('/fonts/Cera Pro Light.otf') format('opentype');
		font-weight: 300;
		font-style: light;
	}

	@font-face {
		font-family: 'Cera';
		src: url('/fonts/Cera Pro Black.otf') format('opentype');
		font-weight: 900;
		font-style: black;
	}

	html {
        font-family: 'Cera', 'Century Gothic', sans-serif;
		font-style: normal;
		font-weight: 300;
		font-size: 17px;
		line-height: 22px;
	}
	code {
		font-family: Jetbrains Mono, Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono,
			Bitstream Vera Sans Mono, Courier New, monospace;
		
	}
	body{
		margin: 0;
		background-color: #0D1013;
	}
	h1{
		font-family: 'Cera', 'Century Gothic', sans-serif;

		font-weight: 700;
		font-size: 50px;
		line-height: 50px;
	}
	h2{
		font-family: 'Cera', 'Century Gothic', sans-serif;
		font-style: normal;
		font-weight: 600;
		font-size: 40px;
	}
    iframe,
    img,
    svg {
    	width: 100%;
    	height: 100%;
    	display: block;
    }
    a {
    	text-decoration: none;
    	color: #fff;
    }
	a:hover {
		text-decoration: none;
	}
	@media screen and (max-width: 636px) {
		p {
			font-size: 20px;
		}
	}
</style>
