---
export interface Props {
  title: string;
  actions: Record<string, string>;
}

const {title, actions} = Astro.props;
---


<div class="card">
  <div class="preview">
    <slot name="header" />
  </div>
  <div class="info">
    <h3 class="title">{title}</h3>
    <p class="description">
      <slot />
    </p>
    <div class="actions">
      {
        Object.entries(actions).map(([text, href], index) => (
          <a
            class={`link ${index === 0 ? '' : 'secondary'}`}
            href={href}
            
          >
            {text}
          </a>
        ))
      }
    </div>
  </div>
</div>
<script>
  document.querySelectorAll(".card")?.forEach((card) => {
    card.addEventListener("click", () => {
      const link = card.querySelector("a")
      console.log(link)
      if (link instanceof HTMLAnchorElement) {
        document.location = link.href;
      }
    });
  });
</script>

<style>
  .card {
    display: flex;
    align-items: start;
    background: rgba(16, 21, 27, 0.7);
    border: 1.6px solid;
    border-color: #161D27;
    border-radius: 10px;
    backdrop-filter: blur(10px);
    margin-bottom: 48px;
    gap: 12px;
    padding: 5px;
    cursor: pointer;
  }
  .card a{
	text-decoration: none;
	color: #fff;
  }

  .card:hover a{
    font-weight: 400;
	text-decoration: none;
	color: #fff;
  }
  .card:hover a::after{
    content: " â†’";
  }
  .preview {
    flex-basis: 492px;
    max-width: 492px;
    flex-shrink: 1;
    aspect-ratio: 16 / 9;
    overflow: hidden;
    position: relative;
    border-radius: 5px;
    max-width: 55%;
    cursor: pointer;
    object-fit: cover;
  }
  slot {
    object-fit: cover;
    max-width: 100%;
  }
  .info {
    max-width: 40%;
    flex-shrink: 1;
    display: flex;
    flex-direction: column;
    gap: 6px;
  }
  

  .title {
    font-size: 32px;
    margin: 0;
    line-height: 40px;
  }

  .description {
    margin: 0;
    font-style: normal;
    font-weight: 300;
    font-size: 17px;
    line-height: 22px;
  }

  .actions {
    display: flex;
    flex-wrap: wrap;
  }
  @media screen and (max-width: 636px) {
    .card {
      flex-wrap: wrap;
      margin-left: 0;
      margin-right: 0;
    }
    .preview {
      max-width: 100%;
      flex-basis: 100%;
      aspect-ratio: 16 / 9;
      margin-bottom: 12px;
    }
    h3 {
        font-size: 40px;
    }
    p {
         font-size: 14px;
         line-height: 1.3;
    }
    .info {
      max-width: 100%;
    }
  }
</style>